/* pages/release/release.wxss */

page {
    background: #f6f6f7;
}
/* 弹窗 */
.mes-container{
    position: fixed;
    width: 100%;height: 100%;overflow: hidden;
    top:0;left:0;background: rgba(0,0,0,.3);
    display: flex;z-index: 99;
}
.mes-wrap{
    margin:auto;background: #fff;border-radius: 3px;
    padding:10px 20px;font-size: 14px;color:#fff;max-width: 95%;
}

.suc{
    background: #4bce4a;
}
.err{
    background: #e51c23;
}



.optImg{
    position: absolute;
    top:0;bottom: 0;left:0;right:0;margin:auto;
    max-width: 100%;max-height: 100%;
}
.add-img {
    height: 210px;
    position: relative;
    overflow:hidden;
}

.img-list {
    width:33.33%;
    display:inline-block;
    padding:10px 5px;
    box-sizing:border-box;
    text-align:center;
    position:relative;
    outline:1px solid #5f5d5d;
    outline-offset:-3px;
}

.img-list image {
    width: auto;
    max-width: 100%;
    min-width: 100%;
    height: 80px;
}

.img-list text {
    position: absolute;
    bottom: 5px;
    left: 0;
    right: 0;
    margin: auto;
    display: inlin-block;
    width: 20px;
    border: 1px solid #000;
    height: 20px;
    text-align: center;
    border-radius: 50%;
    font-weight: 900;
    font-size: 14px;
}

.map-info {
    display: flex;
    margin-top: 10px;
    background: #fff;
    padding: 10px 0;
}

.map-info textarea {
    flex: 1;
    font-size: 15px;
    padding: 0 5px;
    height: 45px;
}

.map-info .take {
    width: 45px;
    height: 45px;
    font-size: 15px;
    padding: 0 15px;
    text-align: center;
    border-left: 1px solid #4bce4a;
    color: #4bce4a;
}

.rel-info {
    background: #fff;
    margin-top: 10px;
}

.info-list {
    padding: 5px 8px;
    display: flex;
    border-bottom: 1px solid #f3f3f3;
}

.info-list text, .info-list input, .info-list textarea {
    flex: 1;
    font-size: 13px;
    vertical-align: middle;
    color: #101010;
}

.info-list text {
    width: 70px;
    line-height: 26px;
    flex: none;
    color: #4bce4a;
}

.info-list textarea {
    height: 120px;
}

.push {
    margin: 30px auto;
    width: 70%;
    height: 45px;
    line-height: 45px;
    border-radius: 45px;
    background-color: rgba(66, 221, 65, 1);
    color: rgba(255, 255, 255, 1);
    font-size: 15px;
    text-align: center;
    box-shadow: 0px 0px 12px 2px rgba(95, 242, 94, 1);
}

.suc-container {
    background: rgba(0, 0, 0, 0.3);
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
    z-index: 99;
}

.suc-wrap {
    margin: auto;
    max-width: 90%;
    background: #fff;
    border-radius: 2px;
    min-width:60%;
}

.suc-header {
    padding: 20px 30px;
    font-size: 13px;
    border-bottom: 1px solid #ddd;
    text-align: center;
}

.suc-oper {
    display: flex;
}

.oper-list {
    flex: 1;
    font-size: 13px;
    text-align: center;
    padding: 13px 0;
}

.oper-list:nth-child(1) {
    border-right: 1px solid #ddd;
    color: #e51c23;
}

.oper-list:nth-child(2) {
    color: #4bce4a;
}

.picker {
    font-size: 14px;
    line-height: 25px;
}

/**index.wxss**/
.index-header image{
    max-width:20px;
    max-height:23px;
    margin:10px 5px;
    float:left;
    vertical-align:sub;
}

.index-map{
    display:block;
    line-height:45px;
    font-size:17px;
    letter-spacing:1px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.item{
    display: flex;
    margin:45px auto;
}
.item-list{
    flex:1;
    text-align:center;
}
.item-list image{
    width:200rpx;
    height:200rpx;
    border-radius: 50%;
    box-shadow: 0px 0px 25px -2px rgba(37, 249, 36, 1);
}
.item-list text{
    display: block;
    margin-top:5px;
    color: rgba(9, 170, 8, 1);
    font-size: 15px;
    text-align: center;
    font-family: Arial;
    letter-spacing: 1px;
}
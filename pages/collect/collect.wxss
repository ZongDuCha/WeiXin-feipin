page{
    background: #f3f3f3;
}
.collect-header{
    background: #4BCE4A;
    display: flex;padding:10px;

}
.phcolor{
    color:#fff;
}
.col-map{
    color:#fff;line-height:25px;
    width:60px;font-size: 15px;text-align: center;
}
.col-map image{
    width:10px;height:15px;
    vertical-align: middle;
}
.collect-header input{
    border: 1px solid #fff;
    margin:0 10px;line-height:27px;
    color:#fff;flex:1;padding:0 8px;
    border-radius: 15px;font-size: 14px;
}
.col-ss{
    color:#fff;line-height:25px;text-align: center;
    width:40px;font-size: 15px;
    position:relative;
}
.col-ss:before{
    content:'';
    position:absolute;
    width:30px;
    bottom:0px;
    left:0;right:0;margin:0 auto;
    background:#fff;
    height:1px;
}

.collect-tab{
    background:#fff;
    display: flex;
}
.tab-list{
    text-align: center;
    padding:10px 0;
    flex:1;
    font-size: 14px;
}
.active{
    color:#4BCE4A;
    position: relative;
}
.active:before{
    content:'';
    position: absolute;
    left:0;right:0;bottom:5px;margin:0 auto;
    background:#4BCE4A;width:35px;height:1px;
}
.col-warp-list{
    width:95%;
    background:#fff;
    margin:10px auto;
    padding:8px 0;
}
.list-title{
    max-height:34px;
    padding:0 8px;
    padding-bottom:8px;
    border-bottom:1px solid #F3F3F3;
    line-height:20px;
    color:rgba(16, 16, 16, .8);
    font-size:13px;
    font-weight:600;
    isplay: -webkit-box;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.list-imgWrap{
    padding:8px;
    border-bottom:1px solid #F3F3F3;
    height:80px;
    margin-bottom:8px;
}

.imgWrap-list{
    width:100px;
    float:left;
}
.imgWrap-list+.imgWrap-list{
    margin-left:8px;
}
.imgWrap-list image{
    width:100%;
    height:80px;
}

.col-user{
    padding:8px;
    display: flex;
}

.user-map{
    line-height: 20px;
    color: rgba(99, 128, 234, 1);
    font-size: 13px;
    text-align: center;
    font-weight: 600;
}
.user-map image{
    width:15px;
    height:20px;
    vertical-align:sub;
}

.collect-end{
    text-align:center;
    margin-bottom:10px;
}
.span{
    width:30px;
    height:1px;
    background:#ddd;
    margin:0 10px;
    display: inline-block;
    vertical-align: middle;
}
.end-text{
    font-size: 12px;
    color:#ccc;
    display:inline-block;
}

/* 店铺 */

.shop-item{
    display:flex;
    margin:15px 10px;
    overflow:hidden;
    background:#fff;
    padding:10px 5px;
    box-shadow:0 2px 3px #ddd;
}

.shop image{
    flex:1;
    max-width:70px;
    max-height:70px;
    border-radius:50%;
    vertical-align:middle;
    margin-right: 8px;
}
.shopInfo{
    flex:1;
    font-size: 14px;
    line-height: 22px;
}
.shopTx{
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    max-height:35px;
}
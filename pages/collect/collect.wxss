.item{
    display:flex;
    position:fixed;
    left:0;
    right:0;
    top:0;
    bottom:0;
    margin:auto;
    height:40vw;
}
.item-list{
    flex:1;
    text-align:center;
}
.item-list image{
    width:250rpx;
    height:250rpx;
    border-radius: 50%;
    box-shadow: 0px 0px 25px -2px rgba(37, 249, 36, 1);
}
.item-list text{
    display: block;
    margin-top:5px;
    color: rgba(9, 170, 8, 1);
    font-size: 15px;
    text-align: center;
    font-family: Arial;
    letter-spacing: 1px;
}
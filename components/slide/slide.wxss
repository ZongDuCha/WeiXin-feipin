/* components/slide/slide.wxss */
.swiper-container{
    background: rgba(0,0,0,.95);
    position:fixed;top:0;left:0;width:100%;height:100%;
    overflow: hidden;z-index: 1111
}
.swiper-wrap{
    width: 100%;height:100%;
}
.swiper-item{
    display:flex;
}
.img{
    margin:auto
}
.close{
    width:30px;height:30px;position: absolute;top:5px;left:0;right:0;margin: auto;
    border-radius: 50%;border:1px solid #fff;color:#fff;font-size: 15px;font-weight: 900;
    text-align: center;line-height: 30px;z-index: 999;
}